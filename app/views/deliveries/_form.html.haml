%p
  Delivery of: 
  = l Date.today

= simple_form_for @customer do |f|
  = f.simple_fields_for :deliveries do |deliveries_f|
    .block
      .column.span-12
        = deliveries_f.association :products, :multiple => true, :selected => @products_selected, 
                                   :input_html => { :title => "- Select product -" }, :label => false
        = deliveries_f.input :notes
        = deliveries_f.simple_fields_for :delivery_items do |d_items_f|
          .block
            .column.span-12
              %label quantity:
  .block
    .column.span-24
      = f.submit
