%p
  Delivery of: 
  = l Date.today

= simple_form_for @customer do |f|
  = f.simple_fields_for :deliveries do |delivery_f|
    %table{:style => "border-style: solid; border-width: 1px;"}
      %th products
      %th quantity
      = delivery_f.simple_fields_for :delivery_items do |item_f|
        %tr
          %td{:style => "border-style: solid; border-width: 1px;"}
            = item_f.association :product, :label => false
          %td{:style => "border-style: solid; border-width: 1px;"}
            = item_f.input :quantity, :label => false
          %td{:style => "border-style: solid; border-width: 1px;"}
            = item_f.hidden_field :_destroy
            = link_to_function "remove", "remove_fields(this)"
    = delivery_f.input :notes
  = f.submit
