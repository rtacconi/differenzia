!!! Strict
%html
  %head
    %title= yield :title || "Differenzia"
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag :defaults, 'searchbox'
    = csrf_meta_tag
    = yield :header
  %body
    #header 
      %h1 Differenzia
    - unless flash.empty?
      #flash
        = content_tag :div, flash[:notice], :class => "notice" unless flash[:notice].blank?
        = content_tag :div, flash[:error], :class => "error" unless flash[:error].blank?
    = yield