!!! Strict
%html
  %head
    %title= yield :title || "Differenzia"
    = render 'layouts/stylesheets'
    = javascript_include_tag :defaults, 'searchbox'
    = csrf_meta_tag
    = yield :header
  %body
    .container
      = render 'layouts/header'
      %section{:class => 'round'}      
        - unless flash.empty?
          #flash
            = content_tag :div, flash[:notice], :class => "notice" unless flash[:notice].blank?
            = content_tag :div, flash[:error], :class => "error" unless flash[:error].blank?
        = yield
