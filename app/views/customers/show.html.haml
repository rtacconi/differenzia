.block
  .column.span-9
    %p Customer
    %p
      %label Anno:
      = @customer.year

    %p
      %label Nominativo:
      = @customer.full_name

    %p
      %label Data di nascita:
      = l @customer.birth_date if @customer.birth_date

    %p
      %label Indirizzo di residenza:
      = @customer.address

    %p
      %label Codice postale:
      = @customer.postal_code

    %p
      %label Citt√†:
      = @customer.city

    %p
      %label Prov.:
      = @customer.area

    %p
      %label Codice fiscale:
      = @customer.tax_code

    %p
      %label Numero contratto:
      = @customer.contract_number

    %p
      %label Metri quadri:
      = @customer.square_meters

    %p
      %label Categoria:
      = @customer.category

    %p
      %label Indirizzo di riferimento:
      = @customer.taxable_address

    %br
    %p
      = link_to 'Indietro', "javascript:history.back()"
      
